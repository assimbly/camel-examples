<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>xmltoedi_test1</id>
                    <name>xmltoedi_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/xmltoedi</uri>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:<![CDATA[<edi-message>
  <delimiters segment="LB" field="~" component="^" sub-component="!" />
  <CUS>
    <field.1>
      <component.1>John</component.1>
      <component.2>Doe</component.2>
    </field.1>
    <field.2>1901-01-07</field.2>
    <field.3>john.doe@example.com</field.3>
  </CUS>
</edi-message>]]>
							</uri>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>xmltoedi</uri>
							<options>
								<edifactType>d96a</edifactType>
							</options>
                        </step>
                        <step>
                            <id>4</id>
                            <type>sink</type>
                            <uri>velocity:Message Body: ${bodyAs(String)}</uri>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
</dil>